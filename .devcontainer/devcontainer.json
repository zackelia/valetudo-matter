{
    "name": "Builder",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "llvm-vs-code-extensions.vscode-clangd",
                "ms-vscode.cmake-tools",
                "ms-vscode.cpptools",
                "twxs.cmake",
                "ms-python.python"
            ]
        }
    },
    "containerUser": "user",
    "mounts": [
        "type=bind,readonly,source=/etc/localtime,target=/etc/localtime",
        "type=bind,readonly,source=/etc/timezone,target=/etc/timezone"
    ]
}